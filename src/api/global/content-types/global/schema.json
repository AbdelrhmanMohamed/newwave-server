      "type": "string"
    },
    "instagram_link": {
      "type": "string"
    },
    "linkedin_link": {
      "type": "string"
    },
    "twitter_link": {
      "type": "string"
    },
    "email_career": {
      "type": "email"
    },
    "working_hours": {
      "type": "string",
